<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="5dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_others_message_user_profile_without_date"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/ic_baseline_person_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_others_message_without_date"
        app:shapeAppearance="@style/ShapeAppearanceOverlay.App.Circle" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_others_message_without_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:background="@drawable/layout_others_message_tv"
        android:maxWidth="200dp"
        android:maxLines="6"
        android:paddingHorizontal="15dp"
        android:paddingVertical="5dp"
        android:singleLine="false"
        android:text="This is a message from others in chatroom."
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_others_message_user_profile_without_date"
        app:layout_constraintTop_toTopOf="@id/iv_others_message_user_profile_without_date" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_others_message_time_without_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="5dp"
        android:text="Time"
        android:textColor="#7F7F7F"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_others_message_without_date"
        app:layout_constraintStart_toEndOf="@id/tv_others_message_without_date" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_others_reader_logs_message_viewholder_without_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="5dp"
        android:text="1"
        android:textColor="#F77700"
        android:textSize="12dp"
        app:layout_constraintBottom_toTopOf="@id/tv_others_message_time_without_date"
        app:layout_constraintStart_toEndOf="@id/tv_others_message_without_date" />

</androidx.constraintlayout.widget.ConstraintLayout>