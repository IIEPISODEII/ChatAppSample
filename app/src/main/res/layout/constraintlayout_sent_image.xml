<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="5dp">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_sent_image_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="15dp"
        android:paddingVertical="5dp"
        android:text="This is sent time"
        android:textColor="#7F7F7F"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_sent_image"
        app:layout_constraintEnd_toStartOf="@id/iv_sent_image" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_sent_image"
        style="@style/ShapeAppearanceOverlay.App.RoundCorner"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@color/light_grey_dfdfdf"
        android:layout_marginEnd="10dp"
        android:src="@drawable/ic_outline_image_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintCircleRadius="5dp"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>