<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="5dp">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_received_message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="15dp"
        android:paddingVertical="5dp"
        android:text="This is received time"
        android:textColor="#7F7F7F"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_received_message"
        app:layout_constraintStart_toEndOf="@id/tv_received_message" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_received_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:background="@drawable/layout_received_message_tv"
        android:maxLines="6"
        android:maxWidth="200dp"
        android:paddingHorizontal="15dp"
        android:paddingVertical="5dp"
        android:singleLine="false"
        android:text="This is received Message."
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>